# Application
DOXIE_APP__NAME=Doxie
DOXIE_APP__ENV=development
DOXIE_APP__DEBUG=true
DOXIE_APP__LOG_LEVEL=INFO
DOXIE_APP__PORT=8000
DOXIE_APP__TRANSPORT=stdio
DOXIE_APP__HOST=127.0.0.1

# Database
DOXIE_DATABASE__URL=postgresql+psycopg://user:password@db:5432/doxie

# Secrets (generate and keep only in local .env)
DOXIE_APP__SECRET_KEY=change-me

# Confluence (optional for MCP tools)
DOXIE_CONFLUENCE__BASE_URL=
DOXIE_CONFLUENCE__USERNAME=
DOXIE_CONFLUENCE__TOKEN=
DOXIE_CONFLUENCE__SPACES=docs,eng
DOXIE_CONFLUENCE__CLOUD=true
DOXIE_CONFLUENCE__VERIFY_SSL=true

# GitHub (optional for MCP tools)
# Token is optional for public repos but recommended to avoid rate limits.
DOXIE_GITHUB__TOKEN=
DOXIE_GITHUB__API_BASE_URL=https://api.github.com
DOXIE_GITHUB__WEB_BASE_URL=https://github.com
DOXIE_GITHUB__RAW_BASE_URL=https://raw.githubusercontent.com
